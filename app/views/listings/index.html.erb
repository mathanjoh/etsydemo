<div class="row">
  <div class="col-md-12">
      
    <p id="notice"><%= notice %></p>

    <h1>Listing Listings</h1>

    <div class="row">

      <% @listings.each do |listing| %>

        <div class="col-sm-6 col-md-3">
          <div class="thumbnail">
            <%= image_tag listing.image.url(:medium) %>
            <div class="caption">
              <h3><%= listing.name %></h3>
              <p><%= number_to_currency(listing.price) %></p>
              <p><%= link_to 'Show', listing, class: "btn btn-link" %> <%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-link" %> <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></p>
            </div>
          </div>
        </div>
      
      <% end %>

    </div> 
    <br>

    <%= link_to 'New Listing', new_listing_path, class: "btn btn-default" %>
 
  </div>
</div>